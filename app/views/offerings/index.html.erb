<div class="row">
  <%= render 'carousel' %>
</div>
<div id="title_row" class="row">
  <h1>Our Offerings</h1>
</div>

<% @offerings.each do |offering| %>
  <% if offering.is_visible %>
    <div class="row col-md-12">
      <div class="panel panel-palette_2">

        <div class="panel-heading" role="tab" id="heading<%= offering.id %>">
          <h4><i class="fa fa-wrench"></i><%= offering.name %></h4>
        </div>

        <div class="panel-body">
          <p id="brief"><em><%= offering.brief %></em></p>
          <button class="btn btn-default" type="button" data-toggle="collapse" data-target="#collapse<%= offering.id %>"
                  aria-expanded="false" aria-controls="collapse<%= offering.id %>">
            more...
          </button>
        </div>

        <div id="collapse<%= offering.id %>" class="panel-collapse collapse" role="tabpanel"
             aria-labelledby="heading<%= offering.id %>" style="line-height:1.6em">
          <p><%= offering.description.html_safe %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

