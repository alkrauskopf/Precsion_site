<div class="container">
  <div class="row">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Home', root_path %></li>
            <% if !@pm_offerings.nil? && !@pm_offerings.empty? && !current_user.nil?%>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    Our Methods & Tools<span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <% @pm_offerings.each do |pm| %>
                        <li><%= link_to pm.name, pm_path(:id => pm.id) %></li>
                    <% end %>
                  </ul>
                </li>
            <% end %>
            <li><%= link_to 'Our Team', about_team_path %></li>
            <% if !escent_main_pages.empty? || !community_web_pages.empty? %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    Our Community<span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <% escent_main_pages.each do |escent| %>
                        <li><a href=<%= escent.url %> target="_blank"><%=escent.name%></a></li>
                    <% end %>
                    <% if !escent_main_pages.empty? && !community_web_pages.empty? %>
                        <li role="separator" class="divider"></li>
                    <% end %>
                    <% community_web_pages.each do |web| %>
                        <li><a href=<%= web.url %> target="_blank"><%=web.name%></a></li>
                    <% end %>
                  </ul>
                </li>
            <% end %>
            <li><!-- <a href="#row_1">Our Work</a> --></li>
            <li><!-- <a href="#row_2">Research</a> --></li>
            <li><%= link_to "Join Our Team", "#careerModal", "data-toggle" => "modal" %>
            <li><%= link_to 'Partner With Us', partner_path %></li>
            <li><%= link_to 'Contact Us', contact_logs_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#contactModal'} %></li>
              <% if logged_in? && admin_authorized? %>
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        Admin <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                        <li><%= link_to 'Manage Users', admin_user_roles_path %></li>
                        <li><%= link_to 'Add User', sign_up_path %></li>
                        <li role="separator" class="divider"></li>
                        <li><%= link_to 'Manage Content', admin_offerings_path %></li>
                        <li role="separator" class="divider"></li>
                        <li><%= link_to 'Community Links', admin_escents_path %></li>
                      </ul>
                    </li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav ">
            <% if current_user %>
                <li><%= link_to ('Sign Out ' + current_user.first_name ), logout_path, method: :delete %></li>
            <% else %>
                <li><%= link_to 'Login', login_path %></li>
            <% end -%>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>
<%= render '/session/contact_us_modal' %>
<%= render '/session/career_modal' %>

