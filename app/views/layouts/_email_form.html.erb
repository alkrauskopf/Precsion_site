
<%= form_for [current_user], :url => email_path   do |form| %>
  <div class="form-group">
    <div class="col-sm-8">
      <%= text_area_tag 'message'%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= form.submit 'Send' %>
    </div>
  </div>
<% end %>
