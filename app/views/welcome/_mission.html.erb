
<div class="row mission_row">
      <div class="col-md-1"></div>
      <div class="col-md-10">
        <div class="mission_block">
          <div style=" border: 2px <%= active_offering.panel_color%>; border-style: solid; border-radius: 5px;">
            <table style="width:100%">
              <tbody>
              <tr>
                <td class="mission_label_2">
                  Our Mission
                </td>
                <td class="mission_statement_2" >
                  <%= current_mission ? current_mission.brief.html_safe : '' %>
                </td>
              </tr>
                <% if !active_offering.vision.empty? %>
                  <tr style="color:<%= active_offering.panel_color%>">
                    <td class="vision_label">
                      <%= active_offering.vision_label.html_safe %>
                    </td>
                    <td class="vision_statement" >
                      <%= active_offering.vision.html_safe %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-1"></div>
</div>

