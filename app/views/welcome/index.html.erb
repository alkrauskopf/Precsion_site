<%= render 'layouts/main_header' %>
<!-- Page Content -->
<div class="container">
  <!-- Marketing Icons Section -->
  <div class="row" style="padding-bottom:2em;">
    <div class="col-xs-5">
        <div class="main_block_1"></div>
    </div>
    <div class="col-xs-7">
      <div class="main_block_2" >
        <h3 >Our Mission</h3>
        <div style="text-align:left; width:90%;">
          <p style="line-height:1.8em">
            Help Educators Continuously Improve How Their Schools Work.
          </p>
        </div>
        <h4 style="margin-top:1.2em;">Our Approach</h4>
        <p style="line-height:1.8em"> We help schools increase academic achievement.  We do this by, first, anchoring our methods to educational research and quality principles.
          Second, we apply these to the particular circumstances facing every school.
          Our team is composed of former Colorado principals, authors, researchers, and instructional
          leaders whose focus is on the "how" of school improvement.
          &nbsp;&nbsp;<u><%= link_to 'Learn More', about_us_path %></u>
        </p>
      </div>
    </div>
  </div>
  <div class="row" >
      <h4 class="welcome-header" style="text-align: center;">Continuous Improvement Begins With A Precise Understanding Of The As-Is
      </h4>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-palette_1">
        <div class="panel-heading">
          <h4 style="text-align: center;"><i class="fa fa-search"></i> <%= @welcomes[0] ? @welcomes[0].name.html_safe : 'Standby' %></h4>
        </div>
        <div class="panel-body" style="line-height:2.0em">
          <%= @welcomes[0] ? @welcomes[0].description.html_safe : 'Rebuilding' %>
          <% if @welcomes[0] && !@welcomes[0].user_povs.empty?%>
              <p class="welcome_team">
                  <div class="about_blue_font welcome_pov_list">
                    Please Read:<br/>
                    <% @welcomes[0].user_povs.each do |pov| %>
                        <u><a href= <%= pov.url %>> <%= pov.name %> </a></u><small><%= pov.user ? (' (' + pov.user.last_name + ')') : '' %></small>
                        <br/>
                    <% end %>
                  </div>
              </p>
          <% end -%>
          <!--
            <u><a href="#">Learn More</a></u>
            -->
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-palette_5">
        <div class="panel-heading">
          <h4 style="text-align: center;"><i class="fa fa-users"></i> <%= @welcomes[1] ? @welcomes[1].name.html_safe : 'Standby' %></h4>
        </div>
        <div class="panel-body" style="line-height:2.0em">
          <%= @welcomes[1] ? @welcomes[1].description.html_safe : 'Rebuilding' %>
          <% if @welcomes[1] && !@welcomes[1].user_povs.empty?%>
              <p class="welcome_team">
                  <div class="about_blue_font welcome_pov_list">
                    Please Read:<br/>
                    <% @welcomes[1].user_povs.each do |pov| %>
                        <u><a href= <%= pov.url %>> <%= pov.name %> </a></u><small><%= pov.user ? (' (' + pov.user.last_name + ')') : '' %></small>
                        <br/>
                    <% end %>
                  </div>
              </p>
          <% end -%>           <!--
                <u><a href="#">Learn More</a></u>
            -->
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-palette_2">
        <div class="panel-heading">
          <h4 style="text-align: center;"><i class="fa fa-cog fa-1x fa-spin"></i> <%= @welcomes[2] ? @welcomes[2].name.html_safe : 'Standby' %></h4>
        </div>
        <div class="panel-body" style="line-height:2.0em">
          <%= @welcomes[2] ? @welcomes[2].description.html_safe : 'Rebuilding' %>
          <% if @welcomes[2] && !@welcomes[2].user_povs.empty?%>
              <p class="welcome_team">
                  <div class="about_blue_font welcome_pov_list">
                    Please Read:<br/>
                    <% @welcomes[2].user_povs.each do |pov| %>
                        <u><a href= <%= pov.url %>> <%= pov.name %> </a></u><small><%= pov.user ? (' (' + pov.user.last_name + ')') : '' %></small>
                        <br/>
                    <% end %>
                  </div>
              </p>
          <% end -%>
          <!--
          <u><a href="#">Learn More</a></u>
          -->
        </div>
      </div>
    </div>
  </div>
  <!-- /.row -->
    <div class="row">
      <div class="col-md-4">
        <div class="panel panel-palette_3">
          <div class="panel-heading" >
            <h4 style="text-align: center;"><i class="fa fa-wrench"></i> <%= @welcomes[3] ? @welcomes[3].name.html_safe : 'Standby' %></h4>
          </div>
          <div class="panel-body" style="line-height:2.0em">
            <%= @welcomes[3] ? @welcomes[3].description.html_safe : 'Rebuilding' %>
            <% if @welcomes[3] && !@welcomes[3].user_povs.empty?%>
                <p class="welcome_team">
                    <div class="about_blue_font welcome_pov_list">
                      Please Read:<br/>
                      <% @welcomes[3].user_povs.each do |pov| %>
                          <u><a href= <%= pov.url %>> <%= pov.name %> </a></u><small><%= pov.user ? (' (' + pov.user.last_name + ')') : '' %></small>
                          <br/>
                      <% end %>
                    </div>
                </p>
            <% end -%>
            <!--
            <u><a href="#">Learn More</a></u>
            -->
          </div>
        </div>
        <% if !@testimonials.empty? %>
            <div class="panel panel-palette_2">
              <div class="panel-heading" >
                <h4 style="text-align: center;"><i class="glyphicon glyphicon-thumbs-up"></i>Testimonials</h4>
              </div>
              <div class="panel-body">
                  <%= render partial: 'testimony_box', locals: { testimonials: @testimonials} %>
              </div>
            </div>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="panel panel-palette_4">
          <div class="panel-heading" >
            <h4 style="text-align: center;"><%= @welcomes[4] ? @welcomes[4].name.html_safe : 'Standby' %></h4>
          </div>
          <div class="panel-body welcome_team">
            <%= @welcomes[4] ? @welcomes[4].description.html_safe : 'Rebuilding' %>
              <% if @welcomes[4] && !@welcomes[4].user_povs.empty?%>
                <p class="welcome_team">
                    <div class="about_blue_font welcome_pov_list">
                      Team Points-Of-View:<br/>
                      <% @welcomes[4].user_povs.each do |pov| %>
                          <u><a href= <%= pov.url %>> <%= pov.name %> </a></u><small><%= pov.user ? (' (' + pov.user.last_name + ')') : '' %></small>
                          <% if pov != @welcomes[4].user_povs.last %>
                              &nbsp;&nbsp;&nbsp;
                          <% end %>
                      <% end %>
                    </div>
                </p>
            <% end -%>
            <p>
              <u><%= link_to 'Learn More', about_team_path %></u>
            </p>
            <%= render partial: 'team_box', locals: {users: @users }%>
            </div>
            </div>
            <% if !@partners.empty? %>
                <div class="panel panel-palette_5">
                  <div class="panel-heading" >
                    <h4 style="text-align: center;">Partners</h4>
                  </div>
                  <div class="panel-body">
                      <%= render partial: 'partner_box', locals: { partners: @partners} %>
                  </div>
                </div>
            <% end %>
        </div>
      </div>
    </div>
</div>
