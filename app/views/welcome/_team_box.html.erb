<div class="table-responsive" style="overflow:scroll; max-height:450px;">
  <table class="table table-striped table-hover">
    <tbody>
        <% names.each_with_index do |name, idx| %>
            <tr>
              <td class="thumbnail"><%= image_tag(pics[idx])  %></td>
              <td><span style="font-weight:bold"><%= name %></span>,&nbsp;<small><%= titles[idx] %></small><br/>
                <small><%= bios[idx]%></small>
              </td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>
