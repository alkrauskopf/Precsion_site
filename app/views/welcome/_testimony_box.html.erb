<div class="testimony_table">
  <% testimonials.each do |testimony| %>
      <div class = "row">
        <table style="width:97%">
          <tbody>
              <colgroup>
                <col style="width:20%">
                <col style="width:80%">
              </colgroup>
              <tr>
                <td class= "testimony_image">
                  <% if (!testimony.images.empty? && testimony.images.first.image.present?) %>
                      <%= (image_tag testimony.images.first.image.url, :size =>  "55x60") %>
                  <% else %>
                      <i class="glyphicon glyphicon-thumbs-up"></i>
                  <% end %>
                </td>
                <td class= "testimony_brief">
                <%= testimony.brief.html_safe %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class = "row testimony_row2">
          <%= testimony.description.html_safe %>
      </div>
      <hr>
  <% end %>
</div>

