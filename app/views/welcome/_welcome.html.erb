<div id="welcome_page">
<!-- Page Content -->
<div class="container">
  <% if false %>
  <%= render 'mission_old' %>
  <hr>
  <div class="row" id="row_1">
    <div class="col-md-4">
      <div class="panel panel-palette_1">
        <div class="panel-heading">
          <h4 style="text-align: center;"></i><%= @grant_parent.nil? ? 'Grant Funding Assistance' : @grant_parent.name %></h4>
        </div>
        <% if !@grant_parent.nil? %>
          <%= render partial: 'grant_box_old', locals: {overview: @grant_parent} %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8">
      <div class="panel panel-palette_2">
        <div class="panel-heading">
          <h4 style="text-align: center;"><%= @offering_parent.nil? ? 'Our School Improvement Work' : @offering_parent.name %></h4>
        </div>
        <% if !@offering_parent.nil? %>
            <%= render partial: 'offerings_box_old', locals: {overview: @offering_parent} %>
        <% end %>
      </div>
    </div>
  </div>
  <!-- /.row -->
  <div class="row" id="row_2">
    <hr>
    <div class="col-md-8">
      <div class="panel panel-palette_3">
        <div class="panel-heading">
          <h4 style="text-align: center;"><%= @research_parent.nil? ? 'Research & Standards Inform Our Work' : @research_parent.name %></h4>
        </div>
        <% if !@research_parent.nil? %>
            <%= render partial: 'research_box', locals: { overview: @research_parent} %>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-palette_5">
        <div class="panel-heading">
          <h4 style="text-align: center;"><%= @tool_parent.nil? ? 'Data Management Tools' : @tool_parent.name %></h4>
        </div>
        <% if !@tool_parent.nil? %>
            <%= render partial: 'tools_box_old', locals: {overview: @tool_parent} %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row" id="row_3">
      <hr>
      <div class="col-md-12">
        <div class="panel panel-palette_4">
          <div class="panel-heading" >
            <h4 style="text-align: center;"><%= @consultant_parent.nil? ? 'Experience Matters' : @consultant_parent.name %></h4>
          </div>
          <div class="panel-body">
            <div class="index-panel-size-3">
              <% if false %>
                <div class="team_join_list">
                  <%= @users.collect{|t| t.last_name}.join(' - ') %>
                </div>
                <span class = "team_header">
                  <%= !@consultant_parent.nil? ? @consultant_parent.description.html_safe : 'Rebuilding' %>
                </span>
              <% end %>
                <% if !@consultant_parent.nil? && !@consultant_parent.user_povs.empty?%>
                <p class="welcome_team">
                    <div class="about_blue_font welcome_pov_list">
                      Points-Of-View:&nbsp;
                      <% !@consultant_parent.user_povs.each do |pov| %>
                          <u><a href= <%= pov.url %>> <%= pov.name %> </a></u><small><%= pov.user ? (' (' + pov.user.last_name + ')') : '' %></small>
                          <% if pov != !@consultant_parent.user_povs.last %>
                              &nbsp;&nbsp;&nbsp;
                          <% end %>
                      <% end %>
                    </div>
                </p>
              <% end -%>
                <p>
                  <u><%= link_to 'Learn More', about_team_path %></u>
                </p>
                <%= render partial: 'team_box_old', locals: {users: @users }%>
            </div>
          </div>
        </div>
      </div>
  </div>
  <div class="row" id="row_3">
    <hr>
    <div class="col-md-4">
      <% if !@testimonials.empty? %>
          <div id = "testimony" class="panel panel-palette_5">
            <div class="panel-heading" >
              <h4 style="text-align: center;"><i class="glyphicon glyphicon-thumbs-up"></i>Testimonials</h4>
            </div>
            <div class="panel-body index-panel-size-3">
              <%= render partial: 'testimony_box_old', locals: {testimonials: @testimonials} %>
            </div>
          </div>
      <% end %>
    </div>
    <div class="col-md-8">
      <% if !@partners.empty? %>
          <div class="panel panel-palette_1">
            <div class="panel-heading" >
              <h4 style="text-align: center;">Our Partners</h4>
            </div>
            <div class="panel-body index-panel-size-2">
              <%= render partial: 'partner_box_old', locals: {partners: @partners} %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
  <% else %>
    <div  class="container" >
    <% if !@offering.nil? %>
          <%= render partial: 'mission', locals: {active_offering: @offering}%>
        <div class="row">
          <div class="col-md-3 welcome-panel-left">
            <%= render partial: 'site_list', locals: { active_offering: @offering} %>
            <%= render partial: 'offering_stat_list', locals: { active_offering: @offering} %>
            <%= render partial: 'offering_image_list', locals: { active_offering: @offering} %>
          </div>
          <% if @offering.services? %>
            <div class="col-md-9">
                <%= render partial: 'offerings_box', locals: {overview: @offering} %>
            </div>
          <% end %>
          <% if @offering.grant? %>
            <div class="col-md-9">
              <%= render partial: 'grant_box', locals: {overview: @offering} %>
            </div>
          <% end %>
          <% if @offering.research? %>
            <div class="col-md-9">
              <%= render partial: 'research_box', locals: {overview: @offering} %>
            </div>
          <% end %>
          <% if @offering.tool? %>
              <div class="col-md-9">
                <%= render partial: 'tools_box', locals: {overview: @tool_parent} %>
              </div>
          <% end %>
          <% if @offering.testimonial? %>
            <div class="col-md-9">
              <%= render partial: 'testimony_box', locals: {overview: @offering} %>
            </div>
          <% end %>
          <% if @offering.partner? %>
              <div class="col-md-9">
                <%= render partial: 'partner_box', locals: {overview: @offering} %>
              </div>
          <% end %>
          <% if @offering.consultant? %>
            <div class="col-md-9">
              <%= render partial: 'team_box', locals: {overview: @offering, users: @users} %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
  <% end %>
</div>