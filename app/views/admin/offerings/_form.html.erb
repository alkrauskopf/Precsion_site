<%= form_for([:admin, @offering], html: {class: 'form-horizontal', role: 'form'}) do |f| %>

  <% if @offering.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@offering.errors.count, "error") %> prohibited this offering from being updated:</h4>
      <ul>
        <% @offering.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :brief, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :brief, class: "form-control", size: '60x3' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", size: '60x15' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :position, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :position, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <h4>Publish Offering:</h4>
      <%= f.radio_button(:visible, true) %>
      <%= f.label(:offering_visible, 'Yes') %>
      <%= f.radio_button(:visible, false) %>
      <%= f.label(:offering_hidden, 'No') %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
