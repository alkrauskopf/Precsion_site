<%= form_for([:admin, @offering], html: {id: "id", class: 'form-horizontal', role: 'form'}) do |f| %>

  <% if @offering.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@offering.errors.count, "error") %> prohibited this offering from being updated:</h4>
      <ul>
        <% @offering.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :offering_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :offering_type, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :brief, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :brief, class: "form-control", size: '60x4' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control tinymce", size: '60x15' %>
      <%= tinymce %>
    </div>
  </div>
    <hr>
    If this is a testimony
    <div class="form-group">
      <%= f.label 'Person Name', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :tst_person_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'Organization', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :tst_organization, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'Person Role', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :tst_person_role, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'Topic', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :tst_topic, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'Statement', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :tst_statement, class: "form-control", size: '60x4' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'View Label', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :tst_view_label, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'Video Stream', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :tst_video, class: "form-control", size: '60x4' %>
      </div>
    </div>
    <hr>
  <div class="form-group">
    <%= f.label :panel_header, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :panel_header, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :panel_color, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :panel_color, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :parent_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%#= f.collection_select(:parent_id, Offering.all, :id, :name) %>
      <%= f.select(:parent_id, @parent_array) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :display_position, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :display_position, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    Expiration: <%= (Date.today + @offering.days_til_expire).strftime('%m/%d/%Y') %>
    <%= f.label 'Days Til Expire', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= number_field :expire,:num_days, :value => @offering.days_til_expire  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <h4>Display offering publicly:</h4>
      <%= f.radio_button(:is_visible, true) %>
      <%= f.label(:offering_visible, 'Yes') %>
      <%= f.radio_button(:is_visible, false) %>
      <%= f.label(:offering_hidden, 'No') %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
