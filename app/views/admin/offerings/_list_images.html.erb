<div class = "container image_list-container">
  <div class="row ">
    <hr>
      <%= button_to 'Add Image', admin_add_image_path(offering_id: offering), class: 'btn btn-primary' %>
  </div>
  <div class=" col-md-9 image_panel">
    <div class="panel panel-palette_4 ">
      <div class="panel-heading">
        <h5><%= pluralize(offering.offering_images.size, offering.name + ' Image')%></h5>
      </div>
      <div class="panel-body, table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <tbody>
          <%= content_tag_for(:tr, offering.offering_images.by_position) do |image| %>
              <td>
                <%= image.display_position%>)&nbsp;<%= image.name %>
              </td>
              <td>
                <%= image.image.present? ? image_tag(image.image(:small_thumb))  : '-' %>
              </td>
              <td>
                <%=  image.carousel? ? 'Carousel' : '' %><br/>
                <%= image.active? ? "Active" : "Not Active" %>
              </td>
              <td>
                <%= link_to 'Destroy', [:admin,image], method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
              <td>
                <%= link_to 'Edit', [:admin, image], url: admin_offering_image_path(image) %>
              </td>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
