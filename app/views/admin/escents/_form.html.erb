<%= form_for([:admin, @escent], html: {id: "id", class: 'form-horizontal', role: 'form'}) do |f| %>

  <% if @escent.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@escent.errors.count, "error") %> prohibited this link from being updated:</h4>
      <ul>
        <% @escent.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :escent_type, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :escent_type, class: "form-control" %>
      </div>
    </div>
  <div class="form-group">
    <%= f.label :url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :position, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :position, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <h4>Active"</h4>
      <%= f.radio_button(:is_active, true) %>
      <%= f.label(:link_active, 'Yes') %>
      <%= f.radio_button(:is_active, false) %>
      <%= f.label(:link_inactive, 'No') %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
