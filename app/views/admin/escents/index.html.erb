
  <div class = "container escent_list-container">
    <div class="row ">
      <hr>
      <a class="btn btn-success" href="<%= new_admin_escent_path %>">
        <i class="glyphicon glyphicon-plus-sign"></i>
        New Link
      </a>
    </div>
    <div class=" col-md-9 image_panel">
      <div class="panel panel-palette_4 ">
        <div class="panel-heading">
          <h5><%= pluralize(@escents.size, ' Escent Link')%></h5>
        </div>
        <div class="panel-body, table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <tbody>
            <%= content_tag_for(:tr, @escents) do |escent| %>
                <td>
                  <%= escent.position%>)&nbsp;<%= escent.name %>
                </td>
                <td >
                  <%= escent.url  %>
                </td>
                <td>
                  <%= escent.active? ? "Active" : "Not Active" %>
                </td>
                <td>
                  <%= link_to 'Destroy', [:admin,escent], method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
                <td>
                  <%= link_to 'Edit', [:admin, escent], url: admin_escent_path(escent) %>
                </td>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

