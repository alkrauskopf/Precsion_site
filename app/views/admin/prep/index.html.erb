
  <div class = "container admin_container">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= button_to 'New Venue', admin_prep_new_path, method: :get, class: 'button_blue' %>
      </div>
      <div class="col-md-2"></div>
    </div>
    <div class="row">
      <div class="col-md-2"></div>
        <div class=" col-md-8 image_panel">
          <div class="panel panel-palette_4 ">
            <div class="panel-heading">
              <h5><%= pluralize(@venues.size, ' Precision Prep Venue')%></h5>
            </div>
            <div class="panel-body, table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <tbody>
                <%= content_tag_for(:tr, @venues) do |venue| %>
                    <td>
                      <%= venue.name %>
                    </td>
                    <td>
                      <%= venue.notes.html_safe %>
                    </td>
                    <td>
                      <% if !venue.active?%>
                       <%= link_to 'Destroy', [:admin, venue], method: :delete, data: { confirm: 'Are you sure?' } %>
                      <% else %>
                        Active
                      <% end %>
                    </td>
                    <td>
                      <%= link_to 'Edit', admin_venue_edit_path(venue) %>
                    </td>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <div class="col-md-2"></div>
    </div>
  </div>

