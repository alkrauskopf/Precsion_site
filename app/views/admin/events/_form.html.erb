<%#= form_for [@event], :url=> prep_events_path(@event), html: { class: "form-horizontal", role: "form" } do |f| %>
<%#= form_for [:prep, @event], html: { class: "form-horizontal", role: "form" } do |f| %>
    <% if @event.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@event.errors.count, "error") %> prevented this account from being created:</h4>
          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  <div class="row form_row">
    <%= f.label :name, "Event Name",class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="row form_row">
    <%= f.label :contact_name, "Contact Name",class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :contact_name, class: "form-control" %>
    </div>
  </div>
  <div class="row form_row">
    <%= f.label :contact_email, "Contact Email",class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :contact_email, class: "form-control" %>
    </div>
  </div>
    <div class="row form_row">
      <%= f.label :venue_id, "Venue", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select(:venue_id, @venue_select, value: @event.venue_id) %>
      </div>
    </div>
    <div class="row form_row">
      <%= f.label :e_type, "Type", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select(:e_type, Event.e_types,{ :include_blank => true}) %>
      </div>
    </div>
    <div class="row form_row">
      <%= f.label :start_date, "Start Date", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :start_date, value: (@event.start_date.nil? ? '' : @event.start_date.strftime("%m/%d/%Y")), class: "datepicker", size: 30%>
      </div>
    </div>
    <div class="row form_row">
      <%= f.label :end_date, "End Date", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :end_date, value: (@event.end_date.nil? ? '' : @event.end_date.strftime("%m/%d/%Y")), class: "datepicker", size: 30%>
      </div>
    </div>
    <div class="row form_row">
      <%= f.label :name, "Capacity",class: "col-sm-2 control-label" %>
      <div class="col-sm-3">
        <%= f.number_field :capacity, class: "form-control" %>
      </div>
    </div>
    <div class="row form_row">
      <%= f.label :price, "Student Fee",class: "col-sm-2 control-label" %>
      <div class="col-sm-3">
        <%= f.number_field :price, class: "form-control", step: :any%>
      </div>
    </div>
    <div class="row form_row">
      <%= f.label :location, "Location",class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :location, class: "form-control" %>
      </div>
    </div>
    <div class="row form_row">
      <%= f.label :time, "Time Slot",class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :time, class: "form-control" %>
      </div>
    </div>
    <div class="row form_row">
      <%= f.label :message, "Message",class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :message, class: "form-control" %>
      </div>
    </div>
    <div class="row form_row">
      <%= f.label :is_active, 'Active?', class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.radio_button(:is_active, true) %>
        <%= f.label(:active_yes, 'Active') %>
        <%= f.radio_button(:is_active, false) %>
        <%= f.label(:active_no, 'Inactive') %>
      </div>
    </div>
    <div class="row form_row">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
<%# end %>
