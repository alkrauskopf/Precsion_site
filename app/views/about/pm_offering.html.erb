<div class="row">
  <div class="col-md-6">
    <div class="pm_header_image" >
      <% if !@header_image.nil? %>
        <%= image_tag(@header_image.image ) %>
      <% else %>
        No Image
      <% end %>
    </div>
  </div>
  <div class="col-md-6">
    <% if !@offering.nil? %>
      <h2 class="pm_header ">
        <%= @offering.name.html_safe %>
      </h2>
      <p class="pm_brief" >
        <%= @offering.brief.html_safe %>
      </p>
    <% else %>
      <p class="pm_brief" >
        Undefined Offering
      </p>
    <% end %>
  </div>
</div>
<% if !@offering.nil? %>
  <div class="row">
    <div class="col-md-12">
      <p class="pm_descript" >
        <%= @offering.description.html_safe %>
      </p>
    </div>
  </div>
  <% if @offering.parent? && !@offerings.empty? %>
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10">
          <span class="pm_read_more">
            Click Heading to Read More
          </span>
          <table class="table table-striped pm_table">
            <thead>
              <tr class="pm_table_header">
                <td  style="width:17%;">

                </td>
                <td style="width:18%; vertical-align:middle;">
                  <%= link_to 'Student', pm_path(:id => @offerings[0].id), :class => 'pm_table_link'  %>
                </td>
                <td class="glyphicon glyphicon-resize-horizontal" style="width:3%; font-size:20px; vertical-align:middle;">
                </td>
                <td  style="width:18%; vertical-align:middle;">
                  <%= link_to 'Teacher', pm_path(:id => @offerings[1].id), :class => 'pm_table_link'  %>
                </td>
                <td class="glyphicon glyphicon-resize-horizontal" style="width:3%; font-size:20px; vertical-align:middle;">
                </td>
                <td style="width:18%; vertical-align:middle;">
                  <%= link_to 'School', pm_path(:id => @offerings[2].id), :class => 'pm_table_link'  %>
                </td>
                <td class="glyphicon glyphicon-resize-horizontal" style="width:3%; font-size:20px; vertical-align:middle;">
                </td>
                <td style="width:20%; vertical-align:middle;">
                  <%= link_to 'District', pm_path(:id => @offerings[3].id), :class => 'pm_table_link' %>
                </td>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="pm_table_row_header">
                  Imperative
                </td>
                <td >
                  Growth
                </td>
                <td></td>
                <td>
                  Effectivity
                </td>
                <td></td>
                <td>
                  Efficiency
                </td>
                <td></td>
                <td>
                  Synergy
                </td>
              </tr>
              <tr>
                <td class="pm_table_row_header">
                  Cycle
                </td>
                <td >
                  Continuous
                </td>
                <td></td>
                <td>
                  Monthly
                </td>
                <td></td>
                <td>
                  Bi-Annually
                </td>
                <td></td>
                <td>
                  Annually
                </td>
              </tr>
              <tr>
                <td class="pm_table_row_header">
                 Indicators
                </td>
                <td>
                  SAT, ACT, CC
                </td>
                <td></td>
                <td>
                 Best Practice Research
                </td>
                <td></td>
                <td>
                  State Standards
                  </br>
                  Turnaround Research
                </td>
                <td></td>
                <td>
                  State Standards
                  </br>
                  Turnaround Research
                </td>
              </tr>
              <tr>
                <td class="pm_table_row_header">
                  Measurement Process
                </td>
                <td>
                  In-Classroom Formative Assessment
                </td>
                <td></td>
                <td>
                  Peer Observation & PD
                </td>
                <td></td>
                <td>
                  School Diagnostic & Ongoing PM
                </td>
                <td></td>
                <td>
                  District-wide Diagnostic & Ongoing PM
                </td>
              </tr>
              <tr>
                <td class="pm_table_row_header">
                  Precision's Method
                </td>
                <td>
                  Integrated Formative Assemsment (IFA)
                </td>
                <td></td>
                <td>
                  Collaborative Time In Learning (CTL)
                </td>
                <td></td>
                <td>
                  School PM (PM)
                </td>
                <td></td>
                <td>
                  System PM  (PM)
                </td>
              </tr>
            </tbody>
          </table>
      </div>
      <div class="col-md-1"></div>
    </div>
    <% if !@povs.empty? %>
      <%= render partial: 'pm_povs', locals: {povs: @povs}%>
    <% end %>
  <% else %>
    <div class="row">
      <div class="col-md-5 pm_method_box">
        <% @offerings.each do |meth| %>
          <%= render partial: 'pm_method', locals: {meth: meth}%>
        <% end %>
      </div>
      <div class="col-md-7 pm_method_box">
        <% @images.each do |image| %>
          <%= render partial: 'pm_image', locals: {image: image}%>
        <% end %>
      </div>
    </div>
    <div class="row">
      <hr>
      <div class="col-md-5">
        <% if !@stats.empty? %>
          <%= render partial: 'pm_stats', locals: {stats: @stats}%>
        <% end %>
      </div>
      <div class="col-md-7">
        <% if !@povs.empty? %>
            <%= render partial: 'pm_povs', locals: {povs: @povs}%>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>