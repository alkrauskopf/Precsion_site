<% @offerings.each do |meth| %>
  <hr id = "<%= meth.id%>">
  <div  class="row">
    <div  class="col-md-7">
      <h3 class="pm_subheader ">
        <% if !meth.nil? %>
            <%= meth.name %>
        <% end %>
      </h3>
    </div>
    <div  class="col-md-5">
      <h3 class="pm_subheader ">
        Our Method & Tool
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <div  class = "method_descript">
        <%= meth.description.html_safe %>
      </div>
    </div>
    <div class="col-md-5">
      <div class="image_list">
        <% meth.images.each do |img| %>
          <div  class = "image_name">
            <%= img.name.html_safe %>
          </div>
         <div  class = "image_descript">
           <%= img.description.html_safe %>
         </div>
          <%= img.pic? ? image_tag(img.pic ):'' %>
        <% end %>
